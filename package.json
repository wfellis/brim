{
  "name": "Brim",
  "description": "Brim Desktop App",
  "repository": "https://github.com/brimsec/brim",
  "license": "BSD-3-Clause",
  "version": "0.8.0",
  "main": "dist/js/electron/main.js",
  "author": "Brim Security, Inc.",
  "bin": {
    "release": "./scripts/release/index.js"
  },
  "scripts": {
    "start": "npm-run-all -s clean build:* -p electron watch:*",
    "test": "jest",
    "itest": "jest --config=itest/config.json --runInBand --verbose",
    "electron": "electron .",
    "build": "npm-run-all -p build:*",
    "watch": "npm-run-all -s clean build:* watch:*",
    "build:js": "babel src/js -d dist/js --verbose",
    "build:css": "node-sass-chokidar src/css --output dist/css",
    "build:static": "cpx \"src/static/**\" dist/static",
    "watch:js": "npm run build:js -- --watch --skip-initial-build",
    "watch:css": "npm run build:css -- --watch --skip-initial",
    "watch:static": "npm run build:static -- --watch",
    "watch:reload": "livereload dist",
    "lint": "eslint .",
    "format": "prettier {src,itest,scripts}/**/*.{js,scss} --write --loglevel warn",
    "flow": "flow",
    "format-check": "npm run format && git diff --exit-code -- src itest",
    "check": "npm-run-all -p format-check lint flow test",
    "clean": "node scripts/clean",
    "release": "node scripts/release --darwin",
    "prerelease": "npm run build",
    "prebuild": "npm run clean",
    "postinstall": "node scripts/download-zdeps"
  },
  "jest": {
    "notify": false,
    "notifyMode": "change",
    "setupFilesAfterEnv": [
      "./src/js/test/setup.js"
    ],
    "testURL": "http://localhost",
    "roots": [
      "./src/js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/flow-typed/**",
      "!**/test/**"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "globalSetup": "./src/js/test/globalSetup.js"
  },
  "prettier": {
    "semi": false,
    "bracketSpacing": false,
    "arrowParens": "always"
  },
  "devDependencies": {
    "@actions/artifact": "^0.3.1",
    "@actions/core": "^1.2.3",
    "@actions/glob": "^0.1.0",
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-flow": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-plugin-inline-react-svg": "^1.1.0",
    "babel-plugin-source-map-support": "^2.1.1",
    "commander": "^2.20.3",
    "cpx": "^1.5.0",
    "electron": "^7.1.9",
    "electron-devtools-installer": "^2.2.4",
    "electron-installer-dmg": "^3.0.0",
    "electron-notarize": "^0.2.1",
    "electron-packager": "^14.1.1",
    "electron-winstaller": "^4.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^5.16.0",
    "eslint-plugin-flowtype": "^3.13.0",
    "eslint-plugin-jest": "^22.21.0",
    "eslint-plugin-react": "^7.17.0",
    "flow-bin": "^0.123.0",
    "flow-typed": "^3.1.0",
    "got": "^10.6.0",
    "jest": "^24.9.0",
    "jest-junit": "^6.4.0",
    "livereload": "^0.9.1",
    "node-sass-chokidar": "^1.4.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.19.1",
    "prettier-eslint": "^8.8.2",
    "set-tz": "^0.2.0",
    "spectron": "^9.0.0",
    "sprintf-js": "^1.0.3",
    "tmp": "^0.1.0",
    "whatwg-fetch": "^3.0.0",
    "win-7zip": "^0.1.0",
    "winston": "^3.2.1"
  },
  "dependencies": {
    "animejs": "^3.1.0",
    "base64-js": "^1.3.1",
    "chrono-node": "^1.3.11",
    "classnames": "^2.2.6",
    "d3": "^5.15.0",
    "electron-dl": "^3.0.0",
    "electron-installer-zip": "^0.1.2",
    "electron-log": "^4.1.1",
    "extract-zip": "^1.6.7",
    "fs-extra": "^7.0.0",
    "is-wsl": "^2.1.1",
    "lodash": "^4.17.15",
    "markdown-it": "^10.0.0",
    "md5": "^2.2.1",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.27",
    "mousetrap": "^1.6.3",
    "on-idle": "^3.1.4",
    "prismjs": "^1.18.0",
    "react": "^16.12.0",
    "react-day-picker": "^7.4.0",
    "react-dom": "^16.12.0",
    "react-measure": "^2.3.0",
    "react-redux": "^7.1.3",
    "react-spring": "^8.0.27",
    "react-tooltip": "^4.1.3",
    "react-transition-group": "^2.9.0",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "regenerator-runtime": "^0.13.3",
    "reselect": "^4.0.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.16",
    "valid-url": "^1.0.9",
    "zq": "brimsec/zq#v0.11.1"
  },
  "optionalDependencies": {
    "electron-installer-debian": "^3.0.0",
    "electron-installer-redhat": "^3.0.0"
  }
}
